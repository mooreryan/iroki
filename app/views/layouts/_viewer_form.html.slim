.row
  .row
    ul.tabs#option-tabs data-tabs=""
      .small-5.columns.center-it
        li.tabs-title.is-active.center-it
          a href="" Upload a tree to view!

.row.tabs-content data-tabs-content="option-tabs"
  .row.tabs-panel.is-active

    hr.row
    h4 Upload tree!

    .row
      .small-12.columns
        label for="uploader" Upload your tree!
        input id="uploader" type="file" name="newick"
    .row
      .small-6.columns
        label for="save-svg" Save!?
        input id="save-svg" type="button" value="Save as SVG!" disabled=""
      .small-6.columns
        label for="save-png" Save!?
        input id="save-png" type="button" value="Save as PNG!" disabled=""

    hr.row

    form id="tree-form"
      hr.row
      h4 Tree options!

      .row
        .small-4.columns
          label id="width-label" for="width" Width!
          input id="width" class="slider" type="range" min="250" max="5000" step="250" value="500"
        .small-4.columns
          label id="height-label" for="height" Height!
          input id="height" class="slider" type="range" min="250" max="5000" step="250" value="500"
        .small-4.columns
          label id="padding-label" for="padding" Padding!
          input id="padding" class="slider" type="range" min="0.0" max="0.75" step="0.05" value="0.05"

      .row
        .small-12.columns
          label for="tree-rotation" Tree rotation!
          input id="tree-rotation" class="slider" type="range" min="0" max="270" step="270" value="0"

      /.row
      /  .small-6.columns
      /    label id="outer-width-label" for="outer-width" Width!
      /    input id="outer-width" class="slider" type="range" min="250" max="3000" step="250" value="500"
      /  .small-6.columns
