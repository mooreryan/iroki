    h4 Upload tree

    .row
      form id="file-upload-form"
        .small-6.columns
          label for="uploader" Newick tree
          input id="uploader" type="file" name="newick"
        .small-6.columns
          label for="mapping-file-uploader" Mapping file
          input id="mapping-file-uploader" type="file"
    .row
      .small-12.columns
        label for="matching-type" Mapping file label matching
        select id="matching-type"
          option id="exact" value="exact" selected="" Exact
          option id="partial" value="partial" Partial
    .row
      .small-6.columns
        label for="submit" Submit your files
        input id="submit" type="button" value="Submit!" disabled=""
      .small-6.columns
        label for="reset" Reset the viewer
        input id="reset" type="button" value="Reset!" disabled=""
    .row
      .small-12.columns
        label for="viewer-size-fixed" Fixed viewer width?
        input id="viewer-size-fixed" type="checkbox" checked=""
    .row
      .small-6.columns
        label for="save-svg" Save?
        input id="save-svg" type="button" value="Save as SVG" disabled=""
      .small-6.columns
        label for="save-png" Save?
        input id="save-png" type="button" value="Save as PNG" disabled=""

