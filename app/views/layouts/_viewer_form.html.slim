      /  .small-6.columns
      /    label id="height-padding-label" for="height-padding" Height padding!
      /    input id="height-padding" class="slider" type="range" min="0.1" max="0.75" step="0.05" value="0.2"

      /h4 Tree options!

      .row
        .small-6.columns
          label for="tree-shape" The shape of your dreams!?
          select id="tree-shape"
            option id="rectangular-tree" value="rectangular-tree" selected="" Rectangle-ish!
            option id="circular-tree" value="circular-tree" Circle-ish!
            /option id="radial-tree" value="radial-tree" Radial-ish!

        .small-6.columns
          label for="tree-branch-style" What's your style?!
          select id="tree-branch-style"
            option id="normalogram" value="normalogram" selected="" Normal-o-gram!
            option id="cladogram" value="cladogram" Clad-o-gram!


      /.row
      /  label for="tree-direction" Which way?!
      /  select id="tree-direction"
      /    option id="side-to-side" value="side-to-side" selected="" Side to side!
      /    option id="up-and-down" value="up-and-down" Up and down!

      .row
        .small-12.columns
          label for="tree-sort" Sort?!
          select id="tree-sort"
            option id="descending" value="descending" selected="" Sort!
            option id="ascending" value="ascending" Reverse sort!
            option id="not-sorted" value="not-sorted" Not sorted!

      .row
        hr

      h4 Branch options!

      /.row
      /  label for="branch-shape" Shape?!
      /  select id="branch-shape" disabled=""
      /    option id="rectangle-type" value="rectangle-type" selected="" Rectangles!
      /    option id="straight-type" value="straight-type" Straight lines!

      .row
        label for="branch-width" Width!
        input id="branch-width" type="range" min="1" max="10" value="2" class="slider"

      hr.row
      h4 Label options!

      .row
        .small-6.columns
          label for="show-inner-labels" Show inner labels?!
          input id="show-inner-labels" type="checkbox" name="label-show"
        .small-6.columns
          label for="inner-label-size" Inner label size!
          input id="inner-label-size" type="range" min="8" max="24" value="16" class="slider"

      .row
        .small-6.columns
          label for="show-leaf-labels" Show leaf labels?!
          input id="show-leaf-labels" type="checkbox" name="label-show" checked=""
        .small-6.columns
          label for="leaf-label-size" Leaf label size!
          input id="leaf-label-size" type="range" min="8" max="24" value="16" class="slider"

      .row
        .small-6.columns
          label for="align-tip-labels" Align leaf labels?!
          input id="align-tip-labels" type="checkbox"
        .small-6.columns
          label for="label-rotation" Label rotation!
          input id="label-rotation" type="range" min="-90" max="90" value="0" step="45" class="slider"

      hr.row
      h4 Strange dot options!

      .row
        .small-6.columns
          label for="show-inner-dots" Show inner dots?!
          input id="show-inner-dots" type="checkbox"
        .small-6.columns
          label for="inner-dots-size" Inner dot size!
          input id="inner-dots-size" type="range" min="2" max="8" value="5" class="slider"
      .row
        .small-6.columns
          label for="show-leaf-dots" Show leaf dots?!
          input id="show-leaf-dots" type="checkbox"
        .small-6.columns
          label for="leaf-dots-size" Leaf dot size!
          input id="leaf-dots-size" type="range" min="2" max="8" value="5" class="slider"

      hr.row
      h4 Viewer size!

      .row
        .small-12.columns
          label for="viewer-size-fixed" Fixed viewer width?!
          input id="viewer-size-fixed" type="checkbox" checked=""